<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<h2>Edit Meal</h2>

<div>
	<%= form_for(:meal, :url => {:action => 'update', :id => @meal.id}, :html => {:class => 'form-horizontal'}) do |f| %>
		<%= render(:partial => "form", :locals => {:f => f}) %>
		<div class="form-buttons">
			<%= submit_tag("Save changes") %>
		</div>

	<% end %>	
</div>